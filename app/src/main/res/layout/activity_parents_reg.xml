<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".parents_reg"
        tools:ignore="ExtraText"
        android:background="@drawable/chauhan1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="127dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/parents"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/parent_email"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:inputType="textWebEmailAddress"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:background="#ffffff"
                android:layout_marginTop="40dp"
                android:paddingLeft="10dp"
                android:hint="@string/e_mail"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/parent_adhaar"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:background="#ffffff"
                android:layout_marginTop="40dp"
                android:paddingLeft="10dp"
                android:hint="@string/Adhaar_no"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/parent_Name"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:inputType="text"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/Name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/parent_password"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:inputType="textWebPassword"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/pass"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/parent_mobile"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/Mobile"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/parent_village"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_my_location_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/address"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/parent_state"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_my_location_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/states"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/button_submit"
                android:layout_width="300dp"
                android:paddingLeft="20dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:background="@drawable/custom"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="@string/Reg"/>

        </LinearLayout>
    </ScrollView>