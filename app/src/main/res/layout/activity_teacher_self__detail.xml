<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_self_Detail"
    android:orientation="vertical"
    android:background="@drawable/testbutton">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/self_tch"
            android:textSize="35dp"
            android:layout_marginTop="30dp"
            android:textColor="#0F0E0E"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/add">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">
                    <Spinner
                        android:id="@+id/classes"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:spinnerMode="dialog"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:background="@drawable/btnbg2"
                        android:textAlignment="center"
                        android:entries="@array/Class_Names"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">
                    <Spinner
                        android:id="@+id/stream"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:spinnerMode="dialog"
                        android:background="@drawable/btnbg2"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="10dp"
                        android:entries="@array/stream"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:id="@+id/subject"
                android:layout_marginTop="10dp"
                android:background="#ffff"
                android:gravity="center"
                android:hint="@string/subject"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/batch"
                android:layout_marginTop="80dp"
                android:background="#ffff"
                android:hint="@string/batch"/>
            </RelativeLayout>
        </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp"
                        android:id="@+id/btnsave"
                        android:background="@drawable/btnbg2"
                        android:text="सबमिट करे "
                        android:textSize="25sp"/>
                </RelativeLayout>

            </LinearLayout>
    

</ScrollView>