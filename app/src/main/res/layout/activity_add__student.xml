<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chauhan1"
    tools:context=".Add_Student">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:gravity="center_vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">
                <Spinner
                    android:id="@+id/classes"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:spinnerMode="dialog"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:background="@drawable/btnbg2"
                    android:textAlignment="center"
                    android:entries="@array/Class_Names"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">
                <Spinner
                    android:id="@+id/stream"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:spinnerMode="dialog"
                    android:background="@drawable/btnbg2"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:entries="@array/stream"/>
            </RelativeLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/student_batch"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
            android:hint="@string/batch"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/student_name"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:background="@drawable/button_shape"
                android:paddingLeft="20dp"
                android:hint="@string/Name"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/student_father"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:background="@drawable/button_shape"
                android:layout_marginTop="40dp"
                android:paddingLeft="20dp"
                android:hint="@string/guardian"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/student_adhaar"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="@drawable/button_shape"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/Adhaar_no"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="200dp"
            android:paddingLeft="20dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:background="#1DA3A8"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:text="@string/add_btn"
            android:gravity="center"/>
        <Button
            android:id="@+id/button_back"
            android:layout_width="200dp"
            android:paddingLeft="20dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:background="#1DA3A8"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:text="@string/back"
            android:gravity="center"/>


    </LinearLayout>
</ScrollView>