<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School_Reg"
    android:background="@drawable/chauhan1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/school_logos"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/hai_jo_hai"
            android:layout_gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="0dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="100dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/school_key"
                        android:layout_width="250dp"
                        android:layout_height="55dp"
                        android:paddingLeft="10dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:layout_marginTop="20dp"
                        android:hint="@string/verify_key"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:text="VERIFY"
                    android:id="@+id/verify_btn"
                    android:background="@drawable/custom"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="255dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/after_verify"
            android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/school_email"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:background="#ffffff"
                android:layout_marginTop="40dp"
                android:paddingLeft="10dp"
                android:hint="@string/e_mail"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/school_name"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:background="#ffffff"
                android:layout_marginTop="40dp"
                android:paddingLeft="10dp"
                android:hint="@string/schl_name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/school_board"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/board"/>

        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/Generate_key"
                    android:layout_width="350dp"
                    android:layout_height="55dp"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/Generate_key"/>

            </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/school_password"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:inputType="textWebPassword"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:hint="@string/pass"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/villager_cnf_password"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:inputType="textWebPassword"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/cnf_pass"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/school_mobile"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/Mobile"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/school_location"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_my_location_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/address"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/school_state"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_my_location_black_24dp"
                android:layout_marginTop="20dp"
                android:hint="@string/states"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:background="@drawable/custom"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:text="@string/Reg"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>