<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Start_Activity"
        tools:ignore="ExtraText"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/chauhan1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:background="@drawable/fort"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:textSize="32dp"
                        android:text="@string/app_title"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center_horizontal"
                    >

                    <Button
                        android:id="@+id/button_health"
                        android:layout_width="245dp"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/hos_logo"
                        android:paddingLeft="20dp"
                        android:textSize="25dp"
                        android:background="@drawable/btnbg2"
                        android:layout_marginTop="20dp"
                        android:textColor="#000000"
                        android:text="@string/health_first_btn"/>

                    <Button
                        android:id="@+id/button_education"
                        android:layout_width="245dp"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:drawableLeft="@drawable/edu_loho"
                        android:paddingLeft="10dp"
                        android:background="@drawable/btnbg2"
                        android:layout_marginTop="115dp"
                        android:textColor="#000000"
                        android:text="@string/Eduction"/>

                    <Button
                        android:id="@+id/button_duty"
                        android:layout_width="245dp"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:drawableLeft="@drawable/person"
                        android:paddingLeft="10dp"
                        android:background="@drawable/btnbg2"
                        android:layout_marginTop="205dp"
                        android:textColor="#000000"
                        android:text="@string/main_people"
                        android:layout_marginBottom="30dp"/>
                    <Button
                        android:layout_width="245dp"
                        android:layout_height="50dp"
                        android:id="@+id/changeLang"
                        android:layout_marginTop="285dp"
                        android:textSize="20sp"
                        android:background="#1EE1F3"
                        android:text="@string/changelang"/>
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="50dp"

                    android:background="@drawable/applogo"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>




